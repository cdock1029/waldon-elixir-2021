<input phx-change="suggest" class="block w-full mb-4 border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" type="text" name="q" value="<%= @query %>" placeholder="Tenant search" autocomplete="off"/>
<select name="tenant[]" class="mb-4" required multiple>
  <option hidden disabled selected value>Select tenant</option>
  <%= for tenant <- @results do %>
    <option value="<%= tenant.id %>"><%= tenant.full_name %></option>
  <% end %>
</select>
